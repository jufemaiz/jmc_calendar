.container
	.column.span-6
		%h1
			.words
				.word Two
				.word Thousand
				.word Eleven
			.number 2011
	.column.span-18.last
		%ol
			- today = Date.today
			- d = Date.parse("#{@year}-01-01")
			- for month_number in 1..12
				- d = Date.parse("#{@year}-#{month_number}-01")
				%li
					%dl
						%dt
							= d.strftime('%B')
						- # While this is the same month
						- for day in 1..(Date.new(@year,12,31)<<(12-month_number)).day
							- d = Date.parse("#{@year}-#{month_number}-#{day}")
							%dd{:class => " day #{'past' if d < today} #{'current' if d == today} #{'future' if d > today} commercial-day-#{d.cwday} #{ 'fifteen' if day == 15 }", :title => d.strftime }
								= d.strftime('%e')
								%span.overlay X
						